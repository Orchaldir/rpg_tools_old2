{% extends "base" %}

{% block content %}
    <p><h1>Edit {{ name }}</h1></p>
    <div class="text">
      <p><b>Id:</b> {{ id }}</p>
      <form action="/character/{{ id }}/update" method="post">
        <b><label for="name">Name:</label></b>
        <input type="text" id="name" name="name" value="{{ name }}">
        <br>
        <br>
        <b><label for="gender_option">Gender Option:</label></b>
        {{ macros::add_select(name="gender_option", options=gender_options, selected=gender_option) }}
        <br>
        <br>
        <input type="submit" value="Submit">
      </form>
      <p><a href="/species/details/{{ id }}">Back</a></p>
    </div>
{% endblock content %}
