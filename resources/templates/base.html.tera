<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/static/style.css">
    <meta charset="utf-8" />
    <script src="/static/scripts.js" charset="utf-8" defer></script>
    <title>RPG Tools - Editor</title>
  </head>
  <body>
    {% block content %}{% endblock content %}
  </body>
</html>

{% macro add_select(name, options, selected) %}
  <select id="{{ name }}" name="{{ name }}">
    {% for o in options %}
      <option value="{{ o }}"{% if o == selected %} selected{% endif %}>{{ o }}</option>
    {% endfor %}
  </select>
{% endmacro add_select %}
