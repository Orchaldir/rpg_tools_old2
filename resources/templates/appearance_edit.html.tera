                          </ul>
                        </li>
                        <li>
                          <b>Color:</b> {{ macros::add_select(name="appearance.head.hair.color", options=[ "Aqua","Black","Blue","Fuchsia","Gray","Green","Lime","Maroon","Navy","Olive","Orange","Purple","Red","SaddleBrown","Silver","Teal","White","Yellow" ], selected=appearance.head.hair.color, update=true) }}
                        </li>
                      {% endif %}
                    </ul>
                  </li>
                  <li>
                    <b>Mouth:</b> {{ macros::add_select(name="appearance.head.mouth.type", options=[ "None","Circle","Normal" ], selected=appearance.head.mouth.type, update=true) }}
                    <ul>
                      {% if appearance.head.mouth.type == "None" %}
                      {% elif appearance.head.mouth.type == "Circle" %}
                        <li>
                          <b>Size:</b> {{ macros::add_select(name="appearance.head.mouth.size", options=[ "Small","Medium","Large" ], selected=appearance.head.mouth.size, update=true) }}
                        </li>
                        <li>
                          <b>Teeth Color:</b> {{ macros::add_select(name="appearance.head.mouth.teeth_color", options=[ "White","Yellow","Brown" ], selected=appearance.head.mouth.teeth_color, update=true) }}
                        </li>
                      {% elif appearance.head.mouth.type == "Normal" %}
                        <li>
                          <b>Width:</b> {{ macros::add_select(name="appearance.head.mouth.width", options=[ "Small","Medium","Large" ], selected=appearance.head.mouth.width, update=true) }}
                        </li>
                        <li>
                          <b>Teeth:</b> {{ macros::add_select(name="appearance.head.mouth.teeth.type", options=[ "None","LowerFangs","UpperFangs" ], selected=appearance.head.mouth.teeth.type, update=true) }}
                          <ul>
                            {% if appearance.head.mouth.teeth.type == "None" %}
                            {% elif appearance.head.mouth.teeth.type == "LowerFangs" %}
                              <li>
                                <b>C:</b> {{ macros::add_select(name="appearance.head.mouth.teeth.c", options=[ "Small","Medium","Large" ], selected=appearance.head.mouth.teeth.c, update=true) }}
                              </li>
                            {% elif appearance.head.mouth.teeth.type == "UpperFangs" %}
                              <li>
                                <b>C:</b> {{ macros::add_select(name="appearance.head.mouth.teeth.c", options=[ "Small","Medium","Large" ], selected=appearance.head.mouth.teeth.c, update=true) }}
                              </li>
                            {% endif %}
                          </ul>
                        </li>
                        <li>
                          <b>Teeth Color:</b> {{ macros::add_select(name="appearance.head.mouth.teeth_color", options=[ "White","Yellow","Brown" ], selected=appearance.head.mouth.teeth_color, update=true) }}
                        </li>
                      {% endif %}
                    </ul>
                  </li>
                  <li>
                    <b>Shape:</b> {{ macros::add_select(name="appearance.head.shape", options=[ "Oval","Rectangle","Round","Square","TriangleDown","TriangleUp" ], selected=appearance.head.shape, update=true) }}
                  </li>
                  <li>
                    <b>Skin:</b> {{ macros::add_select(name="appearance.head.skin.type", options=[ "Scales","Skin","ExoticSkin" ], selected=appearance.head.skin.type, update=true) }}
                    <ul>
                      {% if appearance.head.skin.type == "Scales" %}
                        <li>
                          <b>C:</b> {{ macros::add_select(name="appearance.head.skin.c", options=[ "Aqua","Black","Blue","Fuchsia","Gray","Green","Lime","Maroon","Navy","Olive","Orange","Purple","Red","SaddleBrown","Silver","Teal","White","Yellow" ], selected=appearance.head.skin.c, update=true) }}
                        </li>
                      {% elif appearance.head.skin.type == "Skin" %}
                        <li>
                          <b>C:</b> {{ macros::add_select(name="appearance.head.skin.c", options=[ "Fair","Light","Medium","Tan","Dark","VeryDark" ], selected=appearance.head.skin.c, update=true) }}
                        </li>
                      {% elif appearance.head.skin.type == "ExoticSkin" %}
                        <li>
                          <b>C:</b> {{ macros::add_select(name="appearance.head.skin.c", options=[ "Aqua","Black","Blue","Fuchsia","Gray","Green","Lime","Maroon","Navy","Olive","Orange","Purple","Red","SaddleBrown","Silver","Teal","White","Yellow" ], selected=appearance.head.skin.c, update=true) }}
                        </li>
                      {% endif %}
                    </ul>
                  </li>
                </ul>
              </li>
              <li>
                <b>Height</b>
                <ul>
                  <li><b>Millimetre:</b> <input type="number" step="1" id="appearance.height.millimetre" name="appearance.height.millimetre" value="{{ appearance.height.millimetre }}" onchange="updateAppearancePreview();"></li>
                </ul>
              </li>
            {% endif %}
          </ul>
        </li>
      </ul>
      <button formaction="/appearance/{{ id }}/update" formmethod="post">Submit</button>
    </form>
    <p><a href="/character/{{ id }}">Back</a></p>
  </div>
</div>
{% endblock content %}
