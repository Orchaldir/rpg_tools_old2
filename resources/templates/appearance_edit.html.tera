{% extends "base" %}

{% block content %}
<p><h1>Edit appearance of {{ name }}</h1></p>
<div class="left_right_container">
  <div class="image">
    <img id="preview" src="/appearance/preview/front.svg" alt="Front Preview" width="75%"/>
    <img id="preview" src="/appearance/preview/back.svg" alt="Back Preview" width="75%"/>
  </div>
  <div class="text">
    <form id="appearanceForm" action="/appearance/{{ id }}/preview" method="post">
      <ul>
        <li>
          <b>Appearance:</b> {{ macros::add_select(name="appearance.type", options=[ "HeadOnly","Humanoid" ], selected=appearance.type, update=true) }}
          <ul>
            {% if appearance.type == "HeadOnly" %}
              <li>
                <b>Head</b>
                <ul>
                  <li>
                    <b>Ears:</b> {{ macros::add_select(name="appearance.head.ears.type", options=[ "None","Normal" ], selected=appearance.head.ears.type, update=true) }}
                    <ul>
                      {% if appearance.head.ears.type == "None" %}
                      {% elif appearance.head.ears.type == "Normal" %}
                        <li>
                          <b>Shape:</b> {{ macros::add_select(name="appearance.head.ears.shape", options=[ "Pointed","Round","Square" ], selected=appearance.head.ears.shape, update=true) }}
                        </li>
                        <li>
                          <b>Size:</b> {{ macros::add_select(name="appearance.head.ears.size", options=[ "Small","Medium","Large" ], selected=appearance.head.ears.size, update=true) }}
                        </li>
                      {% endif %}
                    </ul>
                  </li>
                  <li>
                    <b>Eyes:</b> {{ macros::add_select(name="appearance.head.eyes.type", options=[ "None","One","Two" ], selected=appearance.head.eyes.type, update=true) }}
                    <ul>
                      {% if appearance.head.eyes.type == "None" %}
                      {% elif appearance.head.eyes.type == "One" %}
                        <li>
                          <b>Eye:</b> {{ macros::add_select(name="appearance.head.eyes.eye.type", options=[ "Simple","Normal" ], selected=appearance.head.eyes.eye.type, update=true) }}
                          <ul>
                            {% if appearance.head.eyes.eye.type == "Simple" %}
                              <li>
                                <b>Eye Shape:</b> {{ macros::add_select(name="appearance.head.eyes.eye.eye_shape", options=[ "Almond","Circle","Ellipse" ], selected=appearance.head.eyes.eye.eye_shape, update=true) }}
                              </li>
                              <li>
                                <b>Color:</b> {{ macros::add_select(name="appearance.head.eyes.eye.color", options=[ "Aqua","Black","Blue","Fuchsia","Gray","Green","Lime","Maroon","Navy","Olive","Orange","Purple","Red","SaddleBrown","Silver","Teal","White","Yellow" ], selected=appearance.head.eyes.eye.color, update=true) }}
                              </li>
                            {% elif appearance.head.eyes.eye.type == "Normal" %}
                              <li>
                                <b>Eye Shape:</b> {{ macros::add_select(name="appearance.head.eyes.eye.eye_shape", options=[ "Almond","Circle","Ellipse" ], selected=appearance.head.eyes.eye.eye_shape, update=true) }}
                              </li>
                              <li>
                                <b>Pupil Shape:</b> {{ macros::add_select(name="appearance.head.eyes.eye.pupil_shape", options=[ "Circle","HorizontalSlit","VerticalSlit" ], selected=appearance.head.eyes.eye.pupil_shape, update=true) }}
                              </li>
                              <li>
                                <b>Pupil Color:</b> {{ macros::add_select(name="appearance.head.eyes.eye.pupil_color", options=[ "Aqua","Black","Blue","Fuchsia","Gray","Green","Lime","Maroon","Navy","Olive","Orange","Purple","Red","SaddleBrown","Silver","Teal","White","Yellow" ], selected=appearance.head.eyes.eye.pupil_color, update=true) }}
                              </li>
                              <li>
                                <b>Background Color:</b> {{ macros::add_select(name="appearance.head.eyes.eye.background_color", options=[ "Aqua","Black","Blue","Fuchsia","Gray","Green","Lime","Maroon","Navy","Olive","Orange","Purple","Red","SaddleBrown","Silver","Teal","White","Yellow" ], selected=appearance.head.eyes.eye.background_color, update=true) }}
                              </li>
                            {% endif %}
                          </ul>
                        </li>
                        <li>
                          <b>Eyebrows:</b> {{ macros::add_select(name="appearance.head.eyes.eyebrows.type", options=[ "None","Normal","Unibrow" ], selected=appearance.head.eyes.eyebrows.type, update=true) }}
