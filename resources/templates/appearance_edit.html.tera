                                <b>Color:</b> {{ macros::add_select(name="appearance.head.eyes.eyebrows.color", options=[ "Aqua","Black","Blue","Fuchsia","Gray","Green","Lime","Maroon","Navy","Olive","Orange","Purple","Red","SaddleBrown","Silver","Teal","White","Yellow" ], selected=appearance.head.eyes.eyebrows.color, update=true) }}
                              </li>
                              <li>
                                <b>Shape:</b> {{ macros::add_select(name="appearance.head.eyes.eyebrows.shape", options=[ "Angled","Curved","Straight" ], selected=appearance.head.eyes.eyebrows.shape, update=true) }}
                              </li>
                              <li>
                                <b>Style:</b> {{ macros::add_select(name="appearance.head.eyes.eyebrows.style", options=[ "Even","Managerial","Winged" ], selected=appearance.head.eyes.eyebrows.style, update=true) }}
                              </li>
                              <li>
                                <b>Width:</b> {{ macros::add_select(name="appearance.head.eyes.eyebrows.width", options=[ "Thin","Average","Wide" ], selected=appearance.head.eyes.eyebrows.width, update=true) }}
                              </li>
                            {% elif appearance.head.eyes.eyebrows.type == "Unibrow" %}
                              <li>
                                <b>Color:</b> {{ macros::add_select(name="appearance.head.eyes.eyebrows.color", options=[ "Aqua","Black","Blue","Fuchsia","Gray","Green","Lime","Maroon","Navy","Olive","Orange","Purple","Red","SaddleBrown","Silver","Teal","White","Yellow" ], selected=appearance.head.eyes.eyebrows.color, update=true) }}
                              </li>
                              <li>
                                <b>Shape:</b> {{ macros::add_select(name="appearance.head.eyes.eyebrows.shape", options=[ "Angled","Curved","Straight" ], selected=appearance.head.eyes.eyebrows.shape, update=true) }}
                              </li>
                              <li>
                                <b>Style:</b> {{ macros::add_select(name="appearance.head.eyes.eyebrows.style", options=[ "Even","Managerial","Winged" ], selected=appearance.head.eyes.eyebrows.style, update=true) }}
                              </li>
                              <li>
                                <b>Width:</b> {{ macros::add_select(name="appearance.head.eyes.eyebrows.width", options=[ "Thin","Average","Wide" ], selected=appearance.head.eyes.eyebrows.width, update=true) }}
                              </li>
                            {% endif %}
                          </ul>
                        </li>
                      {% elif appearance.head.eyes.type == "Two" %}
